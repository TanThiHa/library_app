<%= form_for [:admin, @author] do |f| %>
  <%= render "shared/error_messages", object: @author%>

  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Tên tác giả" %>
  </div>

  <div class="form-group">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>
