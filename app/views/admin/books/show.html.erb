<% provide :title, "Sách" %>
<%= render "admin/static_pages/layout" %>
  <content class="col-md-10 content">
    <div class="col-md-5">
      <%= image_tag @book.image_url.to_s, class: "img-book" %>
    </div>
    <div class="col-md-7">
      <table class="table table-striped table-bordered table-list">
        <thead>
          <tr>
            <th><em class="fa fa-cog"></em></th>
            <th>
              <%= link_to edit_admin_book_path(@book), class: "btn btn-default" do %>
                <em class="fa fa-pencil"></em>
              <% end %>
              <!-- Button trigger modal -->
              <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#majors">
                Nhập hàng
              </button>
              <!-- Modal -->
              <div class="modal fade" id="majors" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalCenterTitle"><b><%= @book.name %></b></h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <%= render "admin/imports/form" %>
                    </div>
                  </div>
                </div>
              </div>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Tên sách</td>
            <td><%= @book.name %></td>
          </tr>
          <tr>
            <td>Loại sách</td>
            <td><%= @book.category_name %></td>
          </tr>
          <tr>
            <td>Tác giả</td>
            <td><%= @book.author %></td>
          </tr>
          <tr>
            <td>Nhà xuất bản</td>
            <td><%= @book.publisher %></td>
          </tr>
          <tr>
            <td>Số trang </td>
            <td><%= @book.num_of_pages %></td>
          </tr>
          <tr>
            <td>Năm xuất bản</td>
            <td><%= @book.year %></td>
          </tr>
          <tr>
            <td>Số lượng</td>
            <td><%= @book.quantity %></td>
          </tr>
          <tr>
            <td>Giá</td>
            <td><%= @book.price %></td>
          </tr>
          <tr>
            <td>Nội dung</td>
            <td><%= @book.content %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </content>
</div>
