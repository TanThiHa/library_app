<%= form_for [:admin, @publisher] do |f| %>
  <%= render "shared/error_messages", object: @publisher%>

  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Tên nhà xuất bản" %>
  </div>
  <div class="form-group">
    <%= f.text_field :phone, class: "form-control", placeholder: "Số điện thoại" %>
  </div>
  <div class="form-group">
    <%= f.text_field :address, class: "form-control", placeholder: "Địa chỉ" %>
  </div>

  <div class="form-group">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>
