<% provide :title, current_user.name %>
<div class="container margin-top">
  <div class="row">
    <h3><b><%= current_user.name %></b></h3><hr>
  </div>
  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <i class="glyphicon glyphicon-map-marker"></i>
        <span class="nav-label"><%= current_user.address %></span>
      </div>
      <div class="form-group">
        <i class="glyphicon glyphicon-envelope"></i>
        <span class="nav-label"><%= current_user.email %></span>
      </div>
      <div class="form-group">
        <i class="glyphicon glyphicon-phone"></i>
        <span class="nav-label"><%= current_user.phone %></span>
      </div>
    </div>
    <div class="col-md-9">
      <table class="table table-striped table-bordered table-list">
        <thead>
          <tr>
            <th><em class="fa fa-cog"></em></th>
            <th>Ngày mượn</th>
            <th>Ngày trả</th>
            <th>Ngày thực trả</th>
            <th>Tiền phạt</th>
            <th>Tình trạng</th>
          </tr>
        </thead>
        <tbody>
          <%= render current_user.requests %>
        </tbody>
      </table>
    </div>
</div>
